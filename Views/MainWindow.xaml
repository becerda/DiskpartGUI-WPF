<Window x:Class="DiskpartGUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiskpartGUI"
        mc:Ignorable="d"
        Title="Distpart GUI" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid>
        <DockPanel VerticalAlignment="Top">
            
            <!-- Window Menu Bar -->
            <Menu DockPanel.Dock="Top" VerticalAlignment="Top">
                <MenuItem Header="_File">
                    <MenuItem Name="MenuItemExit" Header="_Exit" InputGestureText="Ctrl+E"/>
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Name="MenuItemShowAllVolumes" Header="_Show All Volumes"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Name="MenuItemAbout" Header="_About"/>
                    <Separator/>
                    <MenuItem Name="MenuItemAutoCheckForUpdates" Header="Auto Check For _Updates"/>
                </MenuItem>
            </Menu>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Volume Label -->
                <Label Content="Selected Volume:" Margin="10,0,0,0" Grid.Row="0" Grid.Column="0"/>
                
                <!-- Selected Volume Label -->
                <Label Content="{Binding SelectedVolumeInfo}" Margin="10,0,0,0" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" />
                
                <!-- Refresh Button -->
                <Button Name="ButtonRefresh" Content="Refresh" Margin="0,0,10,0" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Width="100" Command="{Binding RefreshCommand}"/>
                
                <!-- List View Of Volumes -->
                <ListView Name="ListViewVolumes" Margin="10,5,10,10" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5"
                          Width="540" Height="200" ItemsSource="{Binding Volumes, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedVolume, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}">
                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn x:Name="GridViewColumnNumber" Header="#" DisplayMemberBinding="{Binding Number}" Width="25"/>
                            <GridViewColumn x:Name="GridViewColumnLetter" Header="Letter" DisplayMemberBinding="{Binding DriveLetter}" Width="50"/>
                            <GridViewColumn x:Name="GridViewColumnLabel" Header="Label" DisplayMemberBinding="{Binding Label}" Width="105"/>
                            <GridViewColumn x:Name="GridViewColumnSize" Header="Size" DisplayMemberBinding="{Binding FullSize}" Width="105"/>
                            <GridViewColumn x:Name="GridViewColumnReadOnly" Header="Read-Only" DisplayMemberBinding="{Binding IsReadOnly}" Width="100"/>
                            <GridViewColumn x:Name="GridViewColumnMounted" Header="Mounted" DisplayMemberBinding="{Binding MountState}" Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Eject Button -->
                <Button Name="ButtonEject" Content="{Binding EjectMountButtonContent, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,5,10" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="100" Command="{Binding ChangeMountStateCommand}"/>

                <!-- Format Button -->
                <Button Name="ButtonFormat" Content="Format" Margin="5,0,5,10" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="100" Command="{Binding Format}"/>

                <!-- Rename Button -->
                <Button Name="ButtonRename" Content="Rename" Margin="5,0,5,10" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="100" Command="{Binding RenameCommand}" CommandParameter="{Binding ElementName=ListViewVolumes, Path=SelectedItem}"/>

                <!-- BitLock Button -->
                <Button Name="ButtonBitlock" Content="BitLock" Margin="5,0,5,10" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="100" Command="{Binding BitLockCommand}"/>

                <!-- BitLock Button -->
                <Button Name="ButtonReadOnly" Content="Set Read-Only" Margin="5,0,10,10" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="100" Command="{Binding ReadOnly}"/>
            </Grid>
            
        </DockPanel>
    </Grid>
</Window>
